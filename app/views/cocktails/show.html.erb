  <% end %>



    <% @cocktail.doses.each do |dose| %>
      <div class="ingredient">
        <p><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "Remove", cocktail_dose_path(dose.id), method: :delete %>
        </p>
      </div>
    <% end %>

</div>
